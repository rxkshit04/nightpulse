{
  "version": 2,
  "builds": [
    { "src": "client/build/**", "use": "@vercel/static" },
    { "src": "server/src/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/src/index.js" },
    { "src": "/(.*)", "dest": "client/build/$1" }
  ],
  "rewrites": [{ "source": "/(.*)", "destination": "/index.html" }]
}
