{
  "version": 2,
  "builds": [
    { "src": "client/public/**", "use": "@vercel/static" },
    { "src": "server/src/index.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server/src/index.js" },
    { "source": "/(.*)", "destination": "/client/public/index.html" }
  ]
}
